# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Google OAuth
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id-here

# Security
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# Rate Limiting
RATELIMIT_ENABLE=True
RATELIMIT_USE_CACHE=default

# AI Model API Keys (Get from respective providers)
# Groq (Recommended - Free & Fast) - Get from https://console.groq.com/keys
GROQ_API_KEY=your-groq-api-key-here

# OpenAI - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic (Claude) - Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key-here

# DeepSeek
DEEPSEEK_API_KEY=your-deepseek-api-key-here

# Grok (X.AI)
GROK_API_KEY=your-grok-api-key-here

# Ollama (Local - No API Key Required)
OLLAMA_BASE_URL=http://localhost:11434
